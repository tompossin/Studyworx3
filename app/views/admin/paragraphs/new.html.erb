<div id="content-large">
  <article>
    <%=link_to "Choose another book", admin_tools_index_path %><br />
    <%=link_to "Edit all paragraphs for #{@book.name}", admin_book_paragraphs_path(@book)%>
    <h1>Create New Paragraphs for: <%= @book.name %> - <%= @version.name %></h1>
    <div id="form_header">
      <div class="hcell" style="width:60px;">Order</div>
      <div class="hcell" style="width:75px;">Start Ref</div>
      <div class="hcell" style="width:75px;">End Ref</div>
      <div class="hcell" style="width:75px;">Verse Count</div>
      <div class="hcell" style="width:100px;">Admin</div>
    </div>
    <div class="trow">
      <%=form_for [:admin, @book, @paragraph] do |f| %>
        <div class="rcell left_end" style="width:60px;">
          <%= f.number_field :p_order, {:disabled=>true,:style=>"width:26px;"} %>
        </div>
        <div class="rcell" style="width:75px;">
          <%= f.text_field :startref, {autofocus: true,:style=>"width:50px;"}  %>
        </div>
        <div class="rcell" style="width:75px;">
          <%= f.text_field :endref, {:style=>"width:50px;"}  %>
        </div>
        <div class="rcell" style="width:75px;">
          <%= f.number_field :verse_count, {:style=>"width:50px;"}  %>
        </div>
        <div class="rcell right_end" style="width:150px;">
          <%= f.submit :save %>
        </div>
      <% end %>
    </div>
      
    
    <% unless @paragraphs.empty? %>
      <div id="table_header" class="trow">
        <div class="hcell" style="width:60px;">Order</div>
        <div class="hcell" style="width:75px;">Start Ref</div>
        <div class="hcell" style="width:75px;">End Ref</div>
        <div class="hcell" style="width:75px;">Verse Count</div>
      </div>
      <% for p in @paragraphs %>
        <% bc = cycle("odd","even") %>
        <div id="p_<%= p.id %>" class="trow">
          <div class="rcell left_end <%=bc%>" style="width:60px;"><%= p.p_order %></div>
          <div class="rcell <%=bc%>" style="width:75px;"><%= p.startref %></div>
          <div class="rcell <%=bc%>" style="width:75px;"><%= p.endref %></div>
          <div class="rcell right_end <%=bc%>" style="width:75px;"><%= p.verse_count %></div>
        </div>
      <% end %>
    <% end %>
  </article>
</div>

<%= nav_bar(@nav_body_content) %>
