<div id="content-large">
  <article>
    <h1>School Administration</h1>
    <table>
      <thead>
        <th>School Name</th>
        <th>Active?</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Owned By</th>
        <th>Admin</th>
      </thead>
      <tbody>
        <% for s in @schools %>
          <% bc = cycle("odd","even") %>
          <tr>
            <td class="left_end <%=bc%>"><%= s.name %></td>
            <td style="background-color:<%= set_color(s.active,:green,:gray)%>"><%= s.active %></td>
            <td class="<%=bc%>"><%= s.start_date.strftime("%m/%d/%Y") %></td>
            <td class="<%=bc%>"><%= s.end_date.strftime("%m/%d/%Y") %></td>
            <td class="<%=bc%>"><%= get_full_name(s.owner_id) if s.owner_id %></td>
            <td class="right_end <%=bc%>">
              <%=link_to "edit", edit_admin_school_path(s.id), {class: "smallest"} %>  
              <%= link_to "View", school_path(s.id),{class: "smallest",:title=>"Visit This Schools Home Page"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>   
  </article>
</div>
<%= nav_bar(@nav_body_content) %>
