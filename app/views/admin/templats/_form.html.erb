<%=form_for [:admin,@school,@templat] do |f| %>

  <%= include_form_validation_errors(@templat) %>

  <div class="float_left limited">
    <p class="title smaller">Name</p>
    <%= f.text_field :name, {:style=>"width:92%;"} %>
    <p class="title smaller">
      Make available to everyone? <%= f.check_box :public %>
    </p>
  </div>
  <div class="float_left limited">
    <p class="title smaller">Create Template content below</p>
    <%= f.text_area :content, {:style=>"width:100%;height:300px;"} %>
    <br /><%= f.submit :save %>
  </div>
<% end%>

