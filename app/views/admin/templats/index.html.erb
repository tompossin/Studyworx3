<div id="content-large">
  <article>
    <h1><%= @school.name%> - Templates</h1>
    <p><%=link_to "Create a new Template", new_admin_school_templat_path(@school), remote: true %></p>
    
    <div id="templat_area">
      <% unless @templats.empty? %>
          <div class="trow">
            <div class="hcell" style="width:300px;">Template Name</div>
            <div class="hcell" style="width:100px;">Template Admin</div>
          </div>
          <div>
            <% for t in @templats %>
              <% bc = cycle("odd","even") %>
              <div class="trow">
                <div class="rcell left_end <%=bc%>" style="width:300px;"><%= t.name %></div>
                <div class="rcell right_end <%=bc%>" style="width:100px;">
                  <%=link_to "edit", edit_admin_school_templat_path(@school,t), remote: true %> 
                  <%=link_to "delete", admin_school_templat_path(@school,t), method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            <% end %>
          </div>
      <% end %> 
    </div> 
  </article>
</div>

<%= nav_bar(@nav_body_content) %>

