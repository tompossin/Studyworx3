<h1>Listing assignments</h1>

<table>
  <tr>
    <th>School</th>
    <th>Book</th>
    <th>Scoresheet</th>
    <th>Order</th>
    <th>Name</th>
    <th>Weight</th>
    <th>Module</th>
    <th>Resources</th>
    <th>Instructions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.school_id %></td>
    <td><%= assignment.book_id %></td>
    <td><%= assignment.scoresheet_id %></td>
    <td><%= assignment.order %></td>
    <td><%= assignment.name %></td>
    <td><%= assignment.weight %></td>
    <td><%= assignment.module %></td>
    <td><%= assignment.resources %></td>
    <td><%= assignment.instructions %></td>
    <td><%= link_to 'Show', assignment %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
    <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

