<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user_id %></td>
    <td><%= sanitize blog.category %></td>
    <td><%= sanitize blog.topic %></td>
    <td><%= link_to 'Show', blog %></td>
    <td><%= link_to 'Edit', '/editor'+ blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

