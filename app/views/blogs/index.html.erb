<div id="content-large">
  <article>
    <div class="floatbox_trans">
      <h1>Listing blogs</h1>
      <%= link_to 'New Blog', new_blog_path %><br />
      <table>
        <tr>
          <th>Lead Story?</th>
          <th>Category</th>
          <th>Topic</th>
          <th colspan="3">Admin</th>
        </tr>
      
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.leadstory %></td>
          <td><%= sanitize blog.category %></td>
          <td><%= sanitize blog.topic %></td>
          <td><%= link_to 'Show', blog %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </article>
</div>
<%= nav_bar(@nav_body_content)%>
