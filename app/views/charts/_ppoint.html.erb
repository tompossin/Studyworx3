<div id="Ppoint_<%= ppoint.id.to_s %>" data-taskid="<%=@task.id%>" data-id="<%=ppoint.id%>" class="pp" style="color:<%= ppoint.color %>;" title="<%=ppoint.observation.name if ppoint.observation %>">  
  <% if @gradingview %>
    <%= image_tag("staffnote.png",{size: "16x16",id: "staffnote_#{ppoint.staffnotes.first.id.to_s}",title: "Click to view staffnote.", style: "float:right;"}) if ppoint.staffnotes.first %>
  <% else %>
    <%= link_to(image_tag("iconic/pen_16x16.png",size: "12x12"),task_ppoint_path(@task,ppoint),{remote: true, style: "float:left;"}) %>
  <% end %>
  <%= formatter(ppoint.merged_content) if ppoint %>
</div>
