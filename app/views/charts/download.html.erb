<div>
  <header>
    
    <h2><%= @task.assignment.name %></h2>

    <p><%= current_user.fullname %></p>

  </header>
  <div class="float_left">
    <h3>Horizontal Chart</h3>
    <%= get_chart_image(current_user,@task,"horizontal") %>
  </div>

    <% @verticals.each do |v| %>
      <section class="float_left">
        <h3><%= v.title %></h3>
        <%= get_chart_image(current_user,@task,v,"vertical")%>
        <%= smart_format(v.charttext.content_type,v.charttext.content) %>
      </section>
    <% end %>

</div>

