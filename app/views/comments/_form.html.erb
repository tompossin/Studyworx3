<div id="form_container" class="comment">
  <%=link_to "cancel", cancel_path, {id: "cancel",remote: true} %><br />
  <%=form_for [@task,@comment] do |f| %>
  
    <%= include_form_validation_errors(@comment) %>
    
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :task_id %>
    <%= f.hidden_field :parent_id %>
    
    <%= f.text_area :content, {style: "width: 98%;"} %><br />
    <%= f.submit :save %>
    
  <% end %>
</div>

