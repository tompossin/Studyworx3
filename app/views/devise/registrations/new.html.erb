<div style="float:right;">
  <div class="floatbox_trans">
    <h2>Sign up</h2>
    
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div><%= f.label :email %><br />
        <span style="font-style:italic;">(This will also be your login.)</span><br />
      <%= f.email_field :email %></div>
      
      <div><%= f.label :firstname %> <span style="font-style:italic;color:red;">(Required)</span><br />
      	<%=f.text_field :firstname %>
      </div>
      
      <div><%= f.label :lastname %> <span style="font-style:italic;color:red;">(Required)</span><br />
      	<%= f.text_field :lastname %>
      </div>
  </div>
  <div class="floatbox_trans">
      
      <div><%= f.label :phone %> <span style="font-style:italic;">(optional)</span><br />
      	<%= f.text_field :phone %>
      </div>
       
      <div><%= f.label :address %> <span style="font-style:italic;">(optional)</span><br />
      	<%= f.text_area :address, :cols=>"24", :rows=>"6" %>
      </div>
    
      <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>
    
      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div>
    
      <div><%= f.submit "Sign up" %></div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>

