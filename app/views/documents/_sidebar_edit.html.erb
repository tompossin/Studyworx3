<p class="title large">Edit Document</p>
<div class="toolbar">
  <span class="tab"><%=link_to "View Document", document_sidebar_view_path(@document),{remote: true} %></span>
  <span class="tab"><%=link_to "All Documents", all_user_documents_path,{remote: true} %></span>
</div>
<p class="title larger"><%= "#{@document.assignment.name}/#{@document.task.name}"%></p>
<div id="editor_container" >
  <%= form_for(@document,{remote: true}) do |f| %>
    
    <%= include_form_validation_errors(@document) %>
    
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :school_id %>
    <%= f.hidden_field :assignment_id %>
    <%= f.hidden_field :task_id %>
    <%= f.hidden_field :content_type %>
    
    <div class="float_left" style="width:97%;" >
      <%= f.submit :save %><br />
      <%= f.text_area :content,  {rows: current_user.preference.rows, id: 'wysihtml5-textarea',style: "width:99%;"} %>
    </div>
  
  <% end %>
</div>