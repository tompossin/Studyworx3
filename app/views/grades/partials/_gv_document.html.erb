<div id="breadcrumbs">
  <span><%=link_to "Grading Office", school_grading_office_path(@school.id) %></span>
  <span class="cell"><%= link_to "Grading Tools", user_assignment_load_tasks_path(user_id,task.assignment_id), {remote: true} %></span>
</div>
<article>
  
  <h3><%= "#{task.assignment.name} - #{task.name}" %></h3>
  
  <% if document %>
    <%= smart_format(document.content_type, document.content) %>
  <% else %>
    <p>There is no content available for this task.</p>
  <% end %>
  
</article>

