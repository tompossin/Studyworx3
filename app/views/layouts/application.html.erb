<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Studyworx</title>
  <%= stylesheet_link_tag    "base", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script>
    $(window).load(function(){
      $('#alert').fadeOut(5000);
      $('#notice').fadeOut(5000);
    });
  </script>
</head>
<body style="<%= set_wallpaper %>">
	<div id='content'>
		<%= yield %>
	</div>
	<div id="header">
  	<%= render "layouts/header"%>
  	<% if current_user %>
  	 <%= render 'layouts/profile' %>
  	<% else %>
  	 <%= render 'layouts/login'%>
    <% end %>
  	<%= render "layouts/alert"%>
	</div>
</body>
</html>
