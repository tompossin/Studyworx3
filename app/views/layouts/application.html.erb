<!DOCTYPE html>
<html>
<head>
  <title>Studyworx</title>
  <%= stylesheet_link_tag    "base", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<script>
  $(window).ready(function(){
    $('#alert').fadeOut(7000);
    $('#notice').fadeOut(7000);
  });
</script>
<body style="<%= set_wallpaper %>">
	<div id='content'>
		<%= yield %>
	</div>
	<div id="header">
  	<%= render "layouts/header"%>
  	<% if current_user %>
  	 <%= render 'layouts/profile' %>
  	<% else %>
  	 <%= render 'layouts/login'%>
    <% end %>
  	<%= render "layouts/alert"%>
	</div>
</body>
</html>
