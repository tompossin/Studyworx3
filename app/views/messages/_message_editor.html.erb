<div class="msg_container">
  <%= form_tag(message, {method: :put, remote: true}) do |f| %>
    From: <%= get_full_name(message.sender_id)%>
    <%= link_to( "cancel",cancel_message_message_path(current_user.id) ,{:class=>"smaller",:remote=>true}) %>
    <br />
    To: <%= get_full_name(message.recipient_id)%>
    <%= text_field_tag 'subject', message.subject, {:class=>"textarea_reduced"} %><br />
    <%= text_area_tag 'body', message.body, {:class=>"textarea_reduced", :size=>"34x6"}%><br />
    <%= submit_tag "send"%>
  <% end %>
</div>
