<div id="message_<%= message.id %>" class="msg_container" >
  <div class="message_view_link">
    <%=link_to(image_tag("iconic/eye_32x24.png"),message_path(message.id),{remote: true, title: "Click to view entire message"})%>
  </div>
  <div class="message_single">
    <% if message.recipient_id == current_user.id %>
      &nbsp;&nbsp;<%=link_to "delete", message_path(message.id),{method: :delete,confirm: "Are you sure you want to delete this message and all it's comments?", remote: true} %>
    <% end %>
    <p class="title small">To: <%= get_full_name(message.recipient_id)%></p>
    <p class="title smaller"><%= message.subject%></p>
  </div>
</div>