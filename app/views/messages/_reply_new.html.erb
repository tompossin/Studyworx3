<div style="float:left;" class="reply_container">
  <%=link_to( "cancel", cancel_reply_message_path(@id),{remote: true}) %><br />
  <%= form_tag({:action=>:reply_create}, {:remote=> true, :id=>current_user.id}) do |r| %>
    <%= hidden_field_tag :recipient_id, @message.recipient_id %>
    <%= hidden_field_tag :sender_id, current_user.id %>
    <%= text_area_tag :body, nil, {:size=>"30x5"} %><br />
    <%= submit_tag "save" %>
  <% end %>
</div>
