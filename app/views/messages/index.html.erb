<h1>Listing messages</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Sender</th>
    <th>Recipient</th>
    <th>School</th>
    <th>Has read</th>
    <th>Archived</th>
    <th>Sender trashed</th>
    <th>Recipient trashed</th>
    <th>Subject</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.parent_id %></td>
    <td><%= message.sender_id %></td>
    <td><%= message.recipient_id %></td>
    <td><%= message.school_id %></td>
    <td><%= message.has_read %></td>
    <td><%= message.archived %></td>
    <td><%= message.sender_trashed %></td>
    <td><%= message.recipient_trashed %></td>
    <td><%= message.subject %></td>
    <td><%= message.body %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

