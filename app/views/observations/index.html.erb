<h1>Listing observations</h1>

<table>
  <tr>
    <th>School</th>
    <th>Position</th>
    <th>Link</th>
    <th>Color</th>
    <th>Code</th>
    <th>Name</th>
    <th>Public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @observations.each do |observation| %>
  <tr>
    <td><%= observation.school_id %></td>
    <td><%= observation.position %></td>
    <td><%= observation.link %></td>
    <td><%= observation.color %></td>
    <td><%= observation.code %></td>
    <td><%= observation.name %></td>
    <td><%= observation.public %></td>
    <td><%= link_to 'Show', observation %></td>
    <td><%= link_to 'Edit', edit_observation_path(observation) %></td>
    <td><%= link_to 'Destroy', observation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

