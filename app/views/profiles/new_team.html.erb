<div id="content-large">
  <div class="floatbox_trans">
    <p class="title">Create a new Team</p>
    <%= form_tag "/profiles/#{current_user.id}/save_team" do %>
      <%= hidden_field_tag "team_id", @team.id %>
      <%= hidden_field_tag "owner_id", current_user.id %>
      <p class="title small">Give Your Team a name</p>
      <%= text_field_tag "name", @team.name %>
      <p class="title small">State Your School name</p>
      <%= select_tag "school_id", options_from_collection_for_select(@schools, "id", "name",@team.school_id), include_blank: true %>
      <p class="title small">Write a description of your Team.</p>
      <%= text_area_tag "description",@team.description ,{size: "24x6"} %>
      <br /><%= submit_tag "Create New Team"%>
    <% end %>
  </div>
</div>
<div id='nav-right'>
  <%= nav_heading(full_name) %>
  
</div>
