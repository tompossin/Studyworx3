
  <div id="current_school" class="float_left title">
    <span id="schoolname"><%= @school.name if @school %></span>
  </div>
  <% unless @registrations.empty? %>
    <div id="pending" class="float_left">
      <p class="title">
        Pending Registrations
      </p>
      <% for p in @registrations %>
        <p id="reg_<%= p.id %>">
          <%=link_to get_full_name(p.user_id), edit_school_participant_path(@school.id,p.id),{remote: true, class: :smallest} %>
        </p>
      <% end %>
    </div>
  <% end %>
  <div class="float_left">
    <p class="title small">My Schools</p>
    <% if @enrollments %>
      <div class="float_left title smaller">
        <%= "click to enroll below..." if @enrollments.empty? %>
      </div>
        <% for ms in @enrollments %>
          <div class="float_left title smaller" style="margin: 0px;">
            <%=  ms.school.name %> 
            <% if ms.accepted > 0 %>
              <%=link_to( "Set as default school", set_current_school_path(ms.school.id), { class: "smaller"}) if ms.school.id %>
            <% else %>
              <span class="red"> Registration Pending</span>
            <% end %>
          </div>
        <% end %>
    <% end %>
  </div>
  <div class="float_left">
    <p class="title small">Currently available Schools</p>
    <% for s in @schools %>
      <div class="float_left title smaller" style="margin: 0px;">
        <%= link_to(s.name, school_path(s.id)) %>
      </div>
    <% end %>
  </div>
