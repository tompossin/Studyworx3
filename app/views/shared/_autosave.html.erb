<!-- You need to pass the url variable to this script as a local variable when you call this partial -->
<script type="text/javascript">
  jQuery(function($) {
    $("form").autosave({
      callbacks: {
        trigger: ["change", function() {
          var self = this;

          $("[name=save]").click(function() {
            self.save();
          });
        }],
        save: {
          method: "ajax",
          options: {
            type: 'PUT',
            url: '<%=j url %>'
          }
        }
      }
    });
  });
</script>