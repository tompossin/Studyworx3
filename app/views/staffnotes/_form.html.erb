<%= form_for @staffnote, {remote: true} do |f| %>
  <%= f.submit :save %>
  <label class="cell">Stickie Note: </label>
  <span id="staffnote_slide" class="cell clickable"> show/hide</span>
  <span><%=link_to "delete", @staffnote,{remote: true, confirm: "Are you sure?", method: :delete } %></span><br />
  <div id="staffnote_editor">
    <%= f.text_area :content, { class: "staffnote"} %>
  </div>  
<% end -%>