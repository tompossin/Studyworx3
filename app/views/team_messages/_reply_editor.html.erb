<div style="float:left;">
  <%=link_to( "cancel", cancel_reply_edit_team_message_path(@id),{remote: true}) %><br />
  <%=form_for @message,url: reply_update_team_message_path(@message.id), method: :put, html: {remote: true} do |r| %>
    <%= r.hidden_field :team_id %>
    <%= r.hidden_field :sender_id %>
    <%= r.text_area :body, {:size=>"32x5"} %><br />
    <%= r.submit "save" %>
  <% end %>
</div>
