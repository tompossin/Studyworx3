<div class="title">
  <%= @team.name %> 
</div>
<div class="title small float_left">
  Description 
  <div class="smaller indent">
    <%=raw format_plaintext(@team.description) %>
  </div>  
</div>
<div class="team">
  <%=link_to "Membership", memberships_team_path(@team),{remote: true, class: "smallest"} %> 
  <%=link_to "Edit this team", edit_team_path(@team),{remote: true, class: "smallest"} %> 
  <%=link_to "Delete entire Team", @team, {method: "delete", remote: true, class: "smallest"} %>
</div>
<div class="float_left"> 
  <div class="title small float_left">
    Current Members: <span class="smallest red"><%= @members.count %></span>
  </div>
  <div class="team" style="border-left: 1px solid gray;">
    <% for m in @members %>
      <%= render("member",{m: m})%>
    <% end %>
  </div>
</div>
