<div id="content-large">    
   <article>
    <div class="float_left title">
      My Teams
    </div>
    <div class="toolbar limited" >
      <span class="cell">
        <%=link_to(image_tag("iconic/sun_stroke_32x32.png",size: "22x22"),teams_path,{title: "My Teams"}) %>
      </span>
      <span class="cell">
        <%=link_to(image_tag("iconic/share_32x32.png",size: "22x22"),new_team_path,{remote: true, title: "Create a new team"}) %>
      </span>
      <span class="cell">
        <%=link_to(image_tag("iconic/chat_32x32.png",size: "22x22"),teams_path,{remote: true, title: "Team Messages"}) %>      
      </span>
      <span class="cell">
        <%=link_to(image_tag("iconic/cog_32x32.png",size: "22x22"),teams_path,{remote: true, title: "Team Maintenance"}) %>      
      </span>
    </div>
    <div id="team_content" class="float_left">
      <div class="title small">
        Teams I own 
      </div>
      <div id="my_teams" class="team">        
        <% for tio in @teams_i_own %>
          <p><%=link_to(tio.name, team_path(tio.id),{remote: true}) %></p>
        <% end %>
      </div>
      <div class="title small">
        Teams I belong to
      </div>
      <div id="my_memberships" class="team">
        <% for mt in @my_teams %>
          <p><%=link_to mt.name, team_path(mt.id), {remote: true} %></p>
        <% end %>
      </div>
    </div>
  </article> 
</div>
<%= nav_bar(@nav_body_content) %>
