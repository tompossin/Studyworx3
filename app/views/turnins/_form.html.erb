<%= form_for(@turnin,{remote: true}) do |f| %>
  
  <%= include_form_validation_errors(@turnin) %>
  
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :assignment_id %>
  
  <div class="field">
    <%= f.select :staff_id, @school.staff.collect {|s| [s.fullname, s.id]},{include_blank: true} %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :done %><br />
    <%= f.check_box :done %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
